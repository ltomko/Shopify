.quantity-box-2 {
    width:45px;
    height:45px;
    display:inline-block;
    border-top: 1px solid #E6E9ED;
    border-bottom: 1px solid #E6E9ED;
    font-style: italic;
    font-weight: 300;
    font-size: 16px;
    padding-top:13px;
    padding-left:18px;

      -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Safari */
     -khtml-user-select: none; /* Konqueror HTML */
