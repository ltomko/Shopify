* {
  box-sizing: border-box;
}
body{
    margin: 0 0 0 0;
    font-family: 'Montserrat', sans-serif;
    overflow-x: hidden;
}

#page-container {
  position: relative;
}

#content-wrap {
     
}
h2 {
    font-family: Montserrat;
    font-style: normal;
    font-weight: 500;
    font-size: 39px;
    line-height: 49px;
    text-align: center;
    color: #29333F;
}
.top-bar {
    background-color:#29333F;
    color:#ffffff;
    height:40px;
    font-family: Montserrat;
    font-style: normal;
    font-weight: 400;
    font-size: 14px;
    line-height: 40px;
    text-align: center;
    display:block;
}
.left-arrow {
    margin-right:40px;
    display:inline-block;
    vertical-align: middle;
}
.right-arrow {
    margin-left:40px;
    display:inline-block;
    vertical-align: middle;
}
.left-arrow-product {
    margin-right:40px;
    
    margin-top:100px;
    vertical-align: middle;
}
.right-arrow-product {
    margin-left:40px;
    
    margin-top:100px;
    vertical-align: middle;
}
.close {
    display:inline-block;
    float:right;
    margin-top:8px;
    margin-right:8%;
    vertical-align: middle;
}
.header {
    background: #FFFFFF;
    box-shadow: 0px 1px 0px rgba(41, 51, 63, 0.1);
    height: 90px;
    display:block;
}
.header:after {
  content: "";
  display: table;
  clear: both;
}
/* Create three unequal columns that floats next to each other */
.column {
  float: left;
  padding: 10px;
  line-height: 70px;
}

.left, .right {
  width: 20%;
}
.right {
    float: right;
}

.middle {
  width: 60%;
}
.logo {
    padding-left:40px;
    padding-top:15px;
}
.header-link {
    color:#29333F;
    font-weight: 500;
    font-size: 16px;
    text-decoration: none;
    margin-right:50px;
    display:inline-block;
}
.header-link-mobile {
    color:#565E68;
    font-weight: 500;
    font-size: 16px;
    text-decoration: none;
    margin-left:20px;
    display:block;
    margin-top:25px;
    margin-bottom:25px;
}
.login-link {
    color:#565E68;
    font-size: 14px;
    text-decoration: none;
    letter-spacing: 1.16667px;
    text-transform: uppercase;
    display:inline-block;
    margin-top:-20px;
    margin-bottom:60px;
}
.left-bar {
    background-color: #E6E9ED;
    height: 20px;
    width: 1px;
    margin-top:0px;
    margin-right:10px;
    display:inline-block;
    
}
.right-bar {
    background-color: #E6E9ED;
    height: 20px;
    width: 1px;
    margin-top:-10px;
    margin-left:10px;
    display:inline-block;
}
.header-icon {
    padding:8px;
    padding-top:0px;
    display:inline-block;
    vertical-align: middle;

}
.mobile-header {
    background: #FFFFFF;
    -webkit-box-shadow: 0px 5px 12px rgba(22, 38, 51, 0.05);
    -moz-box-shadow: 0px 5px 12px rgba(22, 38, 51, 0.05);
    box-shadow: 0px 5px 12px rgba(22, 38, 51, 0.05);
    height: 65px;
    display:none;
}
.mobile-drop-down {
    display:none;
    background-color: #FFFFFF;
    width: 100%;
    min-height: 100%;
    position: relative;
    
}
.mobile-drop-down-shadow {
    display:block;
    background-image: url({{ 'shadow.jpg' | asset_url }});
    width: 100%;
    height: 20px;
    margin-bottom:-20px;
}
.main-image {
    width:100%;
    max-height: 700px;
} 
.hero-text-box {
    display:inline-block;
    width:500px;
    margin-top:165px;
    margin-left:200px;
}
.hero-text {
    color:#FFFFFF;
    font-size: 65px;
    line-height: 71px;
    font-weight: 500;
}
.hero-text-2 {
    color:#FFFFFF;
    font-style: italic;
    font-weight: 200;
    font-size: 19px;
    line-height: 30px;
    padding-top:15px;
    padding-bottom:5px;
    width:440px;
}
.image-main {
    width:100%;
    background-image: url({{ 'main-image.png' | asset_url }});
    background-repeat: no-repeat;
    background-size: cover;
    height: 700px;
    z-index: 1;
}
.drop-down-spot {
    display:inline-block;
    position: relative;
    height:85px;
}
.overlay-main {
    background-color: #29333F;
    height: 700px;
    width:100%;
    opacity: 0.5;
    position: absolute;
    z-index: 2;
    display:none;
    
}
.button-1 {
    background-color:#29333F;
    color:#FFFFFF;
    padding:15px;
    padding-left:20px;
    padding-right:20px;
    display:inline-block;
    font-size: 16px;
    line-height: 14px;
}
.product-slider {
    height: 575px;
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    overflow-y:hidden;
    max-width:1400px;
    margin:0 auto;
}
.product-card {
    position:relative;
    width: 240px;
    margin:25px;
    font-family: Montserrat;
    font-style: normal;
    font-weight: 500;
    font-size: 19px;
    line-height: 24px;
    text-align: center;
    color: #29333F;
    white-space:normal;
    flex: 0 0 auto;
}
.product-slider-arrow {
    height:100%;
    flex: 0 0 auto;
    vertical-align: middle;
}
.down-arrow {
    vertical-align: middle;
}
.mega-drop-down-container{
    left:50%;
    position: absolute;
}
.mega-drop-down {
    position: relative;
    left: -50%;
    background-color:#FFFFFF;
    border-top:1px solid #d3d7dc;
    z-index:5;
    display:none;
}
.label {
    font-family: Montserrat;
    font-style: normal;
    font-weight: 500;
    font-size: 19px;
    line-height: 24px;
    color: #29333F;
}
.subcat {
    font-family: Montserrat;
    font-style: normal;
    font-weight: 500;
    font-size: 14px;
    line-height: 20px;
    color: #565E68;
    line-height: 40px;
}
.gray-bar {
    height:1px;
    background-color:#A6ACB3;
    width: 125px;
    margin-top:5px;
}
.spacing-bar {
    height:1px;
    background-color:#ffffff;
    width: 150px;
}
th, td {
  padding: 15px;
}
table {
    padding: 20px;
    padding-left:40px;
    padding-right:60px;
    padding-bottom:5px;
}
.mobile-divider {
    height:1px;
    background-color: #E1E6EB;
    margin:20px;
}
.mobile-expand {
    display:inline-block;
    float:right;
    margin-right:30px;
    margin-top:10px;
}

.mobile-blue-footer {
    display:none;
    background: #29333F;
    position: absolute;
    bottom: 0;
    width: 100%;
    height:170px;
}
.mobile-wrapper {
  min-height: 100%;
  position: relative;
}
.mobile-turn-off {
    display:block;
}
.shop-mens {
    display:block;
    width:244px;
}
.shop-mens-div {
    background:url({{ 'drew.jpg' | asset_url }});
    width:244px;
    height:183px;
    margin-right:20px;
}
.shop-mens-button {
    display:inline-block;
    z-index:4;
    background-color:#29333F;
    color:#FFFFFF;
    padding:15px;
    font-size: 16px;
    line-height: 14px;
    margin-left:60px;
    margin-top:70px;
}
.spacer-2 {
    height:60px;
}
.product-image-container {
    display:block;
    width:243px;
    height:243px;
}
#product1, #product2, #product3, #product4 {
    visibility:hidden;
    position: absolute;
    z-index:2;
    margin-left: 55px;
    margin-top: 170px;
    width:135px;

    background-color:#29333F;
    color:#FFFFFF;
    padding:15px;
    padding-left:20px;
    padding-right:20px;
    
    font-size: 16px;
    line-height: 14px;
}
.sale-icon {
    z-index:1;
    position: absolute;
    margin-left:42px;
}
@media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {
   .ie10up{margin-left:165px;}
}
.quick-view-column {
  float: left;
  width: 50%;
  z-index:9;
}
/* Clear floats after the columns */
.quick-view-row:after {
  content: "";
  display: table;
  clear: both;
  z-index:9;
}
.quick-view-container {
    display:none;
    position: relative;
    background-color: #fefefe;
    margin: auto;
    padding: 0;
    width: 90%;
    max-width: 1200px;
    z-index:9;
}
#quick-view-image {
    width: 100%;
    float:left;
}
.quick-view-padding {
    padding:50px;
    padding-top:65px;
}
#quick-view-vendor {
    font-style: italic;
    font-weight: 300;
    font-size: 19px;
    line-height: 24px;
    color:#565E68;
}
#quick-view-sku {
    font-style: italic;
    font-weight: 300;
    font-size: 16px;
    line-height: 22px;
    color:#A6ACB3;
}
#quick-view-title {
    font-style: italic;
    font-weight: 500;
    font-size: 31px;
    line-height: 39px;
    color:#29333F;
    margin-top:50px;
    margin-bottom:50px;
}
.quick-view-hr {
    height:1px;
    width:100%;
    background-color:#A6ACB3;
    margin-top:20px;
    margin-bottom:20px;
}
#quick-view-price {
    font-style: italic;
    font-weight: 500;
    font-size: 25px;
    line-height: 31px;
    color: #565E68;
}
#quick-view-bodyhtml{
    font-style: italic;
    font-weight: 300;
    font-size: 16px;
    line-height: 22px;
    color:#565E68;
}
