.add-to-cart {
    display:inline-block;
    height:43px;
    width:calc(100% - 145px);
    border-top:1px solid #29333F;
    margin-left:5px;
    padding-top:12px;
    background-color: #29333F;
    color: #ffffff;
    font-weight: 500;
    font-size: 16px;
    text-align:center;
}
.cart-success {
    display:none;
    paddding:15px;
    margin-top:15px;
    text-align:center;
    font-size: 16px;
    line-height: 22px;
    color:#565E68;
    text-decoration:none;
}
.view-cart-link {
    text-decoration:none;
    color:#565E68;
}
/* The Modal (background) */
.modal {
    display: none;
    position: fixed;
    z-index: 1;
    padding-top: 100px;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0,0,0,.75);
}
@media screen and (max-width: 1425px) {
    .shop-mens {
        display:none;
    }
}
@media screen and (max-width: 1300px) {
    .header {
        display:none;
    }
    .mobile-header {
        display:block;
        padding-right:15px;
    }
    .top-bar {
        display:none;
    }
    .logo {
        padding-left:20px;
        padding-top:15px;
    }
    .header-icon {
        padding:10px;
        padding-top:0px;
        margin-top:20px;
        display:inline-block;
        float:right;
    }
    .hero-text-box {
        display:inline-block;
        width:300px;
        margin-top:280px;
        margin-left:30px;
    }
    .hero-text {
        color:#FFFFFF;
        font-size: 31px;
        line-height: 41px;
        font-weight: 500;
        margin-bottom:10px;
    }
    .hero-text-2 {
        color:#FFFFFF;
        font-style: italic;
        font-weight: 200;
        font-size: 19px;
        line-height: 30px;
        padding-top:25px;
        padding-bottom:5px;
        width:260px;
    }
    .spacer-2 {
        height: 25px;
    }
    h2 {
        font-size: 25px;
        line-height: 31px;
    }
    table {
        padding-right:40px;
    }

}
@media screen and (max-width: 1000px) {
    .quick-view-column {
        width:100%;
    }
    #quick-view-image {
        display:none;
    }
    .quick-view-container {
        width:90%;
    }
    #quick-view-title {
        font-size:28px;
    }
}
